             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:wf="using:WorldsFactory.world.events.eventsInfoCard"
             x:DataType="wf:EventBasicInfoViewModel"
             x:Class="WorldsFactory.world.events.eventsInfoCard.EventBasicInfoView">

  <StackPanel
    Orientation="Vertical"
    HorizontalAlignment="Center"
    VerticalAlignment="Center">

    <!-- Text editor for Condition method -->
    <DockPanel
        Margin="0,20,0,0"
        Name="TextEditorWithPythonForConditionMehod">
    </DockPanel>

    <!-- Text editor for Action method -->
    <DockPanel
        Margin="0,20,0,0"
        Name="TextEditorWithPythonForActionMethod">
    </DockPanel>

  </StackPanel>

</UserControl>
